<article class="container-for-article">

  {{#with news}}
    <h1 class="post-title">{{this.title}}</h1>

    <p class="text-center pb-10 pt-2">Data: {{this.createdAt}}</p>

    {{#if ../userLoggedIn}}
      {{> edit-post this}}
    {{/if}}

    <div class="text-xl whitespace-pre-wrap break-all flex justify-center text-justify">
      <span>{{this.article}}</span>
    </div>
  {{/with}}

  <div class="flex justify-center">
    <a href="/aktualnosci" class="text-center semibold-link-with-hover pt-8">Powrót do aktualności</a>
  </div>

</article>