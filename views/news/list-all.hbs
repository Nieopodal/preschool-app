<article class="container-for-article">
    <header>
        <h2 class="page-title">Aktualności</h2>
    </header>


        <div class="flex justify-center">
            <a href="/aktualnosci/dodaj"
               class="xl-actions-btn font-normal hover:font-normal">Dodaj
                nowy wpis</a>
        </div>


    {{#each news}}
        <div class="one-article">
            <div class="p-4">
                <h3 class="font-bold text-2xl"><a href="/aktualnosci/{{this.id}}" class="hover:text-pink-400">{{this.title}}</a></h3>
                <div class="text-base block">{{this.createdAt}}</div>
                <div class="py-2 whitespace-pre-wrap">{{this.article}}{{#if this.isTooLong}}...<a class=" text-base font-bold text-pink-400 uppercase" href="/aktualnosci/{{this.id}}">czytaj dalej</a>{{/if}}</div>

                <div class="text-base pt-2">
                    <a href="/aktualnosci/{{this.id}}" class="hover:text-pink-400">Czytaj całość</a>


                       | <a href="/aktualnosci/{{this.id}}/edycja" class="text-pink-400 hover:font-bold">Edytuj wpis</a>


                </div>
            </div>
        </div>
    {{/each}}

    {{> pagination this}}
</article>


