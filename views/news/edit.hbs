<div class="container-for-article relative z-0">

{{> deleting-dialog-box this}}

{{#with item}}
    <div id="container-to-blur-when-popup" class="relative z-0">

      {{> blur-effect-div}}

      <header>
        <h1 class="page-title">Edycja wpisu z dnia {{this.createdAt}}</h1>
      </header>

      <form action="/aktualnosci/{{this.id}}?_method=PUT" method="POST">
        <div class="mx-auto text-lg">
          <label class="block py-8 ">
            <span class="pb-2 font-semibold">Tytuł</span>
            <input id="input-news-title" type="text" name="title" minlength="5" maxlength="60" required
                   value="{{this.title}}"
                   class="text-input font-semibold">
            <span id="title-char-counter">0/60</span>
          </label>

          <label class="block pb-8">
            <span class="pb-2 font-semibold">Treść</span>
            <textarea name="article" id="input-news-article" minlength="10" maxlength="5000" required
                      class="text-input resize-y h-80">{{this.article}}</textarea>
            <span id="article-char-counter">0/5000</span>
          </label>

        </div>

        <div class="text-center">
          <button type="submit" id="send-article"
                  class="actions-btn mx-2">
            Zapisz
          </button>

          <button type="button" id="show-deleting-form-btn"
                  class="actions-btn mx-2 my-2 sm:my-0">
            Usuń wpis
          </button>

          <a href="/aktualnosci/{{this.id}}"
             class="ghost-actions-btn mx-2 mt-2 sm:my-0">Anuluj</a>

        </div>
      </form>

    </div>

  </div>
{{/with}}

<script src="/scripts/edit-form.js"></script>
<script src="/scripts/news/add-form.js"></script>
