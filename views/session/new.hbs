<article class="container-for-article">
    <header>
        <h2 class="page-title">Panel logowania</h2>
    </header>

    <div class="actions-container">
        <div class=" p-6 rounded-xl border-[1px] shadow-md ">

            <form action="/session" method="POST">
                <div>
                    <label>
                        <input placeholder="Login" type="text" name="username" required
                               class="border-[1px] rounded p-1 text-xl mb-2 focus:outline-pink-200">
                    </label>
                </div>

                <div>
                    <label>
                        <input placeholder="Hasło" type="password" name="password" required
                               class="border-[1px] rounded p-1 text-xl mb-2 focus:outline-pink-200">
                    </label>
                </div>
                <div>
                    <button type="submit"
                            class="lg-block-actions-btn w-full">
                        Zaloguj
                    </button>
                </div>
            </form>
            {{#if error}}
                <div class="pt-4 text-pink-400 text-sm text-center">
                    Nieprawidłowy login lub hasło.
                </div>
            {{/if}}
        </div>
    </div>

    <div class="one-article">
    </div>

</article>