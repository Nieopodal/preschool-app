{{#if userLoggedIn}}
  <button
    type="button"
    class="btn btn-ghost btn-circle avatar"
    id="user-menu-button"
    aria-expanded="false"
    data-dropdown-toggle="user-dropdown"
    data-dropdown-placement="bottom"
  >
    <span class="sr-only">Menu administratora</span>
    <span class="w-6 h-6 xl:text-secondary-focus">{{> icons/user-svg}}</span>
  </button>

  <div
    class="z-50 hidden my-4 list-none bg-white divide-y divide-gray-100 rounded-lg shadow-xl text-secondary-focus"
    id="user-dropdown">
    <div class="px-4 py-3">
      <span class="block text-sm text-gray-900">Administrator</span>
    </div>
    <ul class="py-2" aria-labelledby="user-menu-button">
      <li>
        <a href="/dashboard"
           class="user-menu-item">Panel administracyjny</a>
      </li>
      <li>
        <a href="/auth/logout"
           class="user-menu-item">Wyloguj</a>
      </li>
    </ul>
  </div>
{{/if}}