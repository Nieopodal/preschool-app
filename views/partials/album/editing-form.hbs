<form action="/album/{{this.id}}?_method=PATCH" method="POST" enctype="multipart/form-data">
  <div class="text-lg mx-auto">
    <label class="block py-8">
      <span class="pb-2 font-semibold">Zmień tytuł</span>

      <input id="input-title"
             type="text"
             name="title"
             minlength="5"
             maxlength="40"
             required
             value="{{this.title}}"
             class="text-input font-semibold"
      >

      <span id="title-char-counter">0/40</span>
    </label>

    <label class="block mb-2">
      <span class="pb-2 font-semibold">Dodaj zdjęcia</span>
      <input class="block text-input bg-white" name="files" type="file"
             accept="image/jpeg, image/png, mage/heic, image/heif" multiple>
      <span class="mt-1 text-sm" id="file_input_help">
        Możliwość dodania do 10 plików na raz, *.JPG, *.JPEG, *PNG, *HEIC, *HEIF (MAX. 7MB/zdjęcie)
      </span>
    </label>

    <div class="text-center">
      <button type="submit"
              id="send-photo"
              class="actions-btn"
      >
        Zapisz
      </button>
      <button type="button"
              id="show-deleting-form-btn"
              class="actions-btn"
      >
        Usuń album
      </button>
      <a href="/album/{{this.id}}" class="ghost-actions-btn">Anuluj</a>
    </div>
  </div>
</form>